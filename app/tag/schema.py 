from dataclasses import dataclass
from bs4 import BeautifulSoup
from app.exception import TypeOfXBRLIsDifferent
from . import BaseXBRLParser

@dataclass
class SchemaImport:
    schema_location: str
    name_space: str
    document_type: str

@dataclass
class LinkBaseRef:
    xlink_type: str
    xlink_href: str
    xlink_role: str
    xlink_arcrole: str
    document_type: str

@dataclass
class Element:
    id: str
    xbrli_balance: str
    xbrli_period_type: str
    name: str
    nillable: str
    substitution_group: str
    type: str
    abstract: str
    document_type: str